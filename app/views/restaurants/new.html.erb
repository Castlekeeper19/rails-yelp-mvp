<div class="category mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-lg-6">
      <h1>Add a new restaurant</h1>
        <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address, html5: true%>
          <%= f.input :phone_number, html5: true %>
          <%= f.input :category, collection: Restaurant::CATEGORY, include_blank: false %>
          <%= f.submit "Add", class: "btn btn-info mt-2" %>
        <% end %>
        </div>
      </div>
  <%= link_to 'Back', restaurants_path, class: 'btn-light'  %>


</div>
